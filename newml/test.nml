parcial_function() := {

  def fib:(int)=>int={
    case 0 => 0
    case 1 => 1
    case n => fib(n-2) + fib(n-1)
  }
  
  printf("fib 10 = %d\n" fib(10))

  /* tuple parcual function */

  llor:(int,int)=>int={
    case 0,0 => a:=1 b:=2; a | b
    case a,b => a | b
  }

  printf("llor %d\n" llor(1,2))
} parcial_function()

