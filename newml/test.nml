e type  | EUnit | EInt(int) | EAdd(e, e)

variant() := {

  def eval:e=>int={
    case EUnit => 0
    case EInt(i) => i
    case EAdd(a, b) => eval(a) + eval(b)
  }

  printf("1+2=%d\n" eval(EAdd(EInt(1), EInt(2))))
} variant()

