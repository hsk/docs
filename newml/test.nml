closure() := {

  block(sp)(f):={
    printf("{\n")
    f(sp ^ "  ")
    printf("%s}\n" sp)
  }
  p := printf

  p("def %s() " "a") block(""){sp=>
    p("%sdef %s() " sp "b") block(sp){sp=>
      p("%sprogram2()\n" sp)
      p("%sprogram2()\n" sp)
    }
    p("%sprogram()\n" sp)
  }
  

  block(sp)(f):={
    printf("{\n")
    f(sp ^ "  ")
    printf("%s}\n" sp)
  }
  p := printf

  p("def %s() " "a") block(""){sp=>
    p("%sdef %s() " sp "b") block(sp){sp=>
      p("%sprogram2()\n" sp)
      p("%sprogram2()\n" sp)
    }
    p("%sprogram()\n" sp)
  }

} closure()

